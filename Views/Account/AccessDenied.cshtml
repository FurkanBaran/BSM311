@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-6">
            <div class="mt-5">
                <div class="display-1 text-danger mb-4">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <h1 class="h2 mb-3">Access Denied</h1>
                <p class="lead mb-4">You do not have permission to access this resource.</p>

                @if (!string.IsNullOrEmpty((string)ViewData["ReturnUrl"]))
                {
                    <p class="text-muted mb-4">
                        Attempted to access: @ViewData["ReturnUrl"]
                    </p>
                }

                <div class="mb-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>You are logged in as: <strong>@User.Identity.Name</strong></p>
                        <p>If you believe you should have access, please contact the administrator.</p>

                        <div class="mt-4">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                               class="btn btn-primary me-2">Go to Home</a>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>Please log in with an account that has access.</p>
                        <a asp-controller="Account" asp-action="Login"
                           asp-route-returnUrl="@ViewData["ReturnUrl"]"
                           class="btn btn-primary">Login</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .display-1 {
        font-size: 5rem;
    }

    .btn {
        padding: 0.5rem 2rem;
    }
</style>